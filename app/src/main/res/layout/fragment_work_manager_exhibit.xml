<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/exhibitPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/work_manager_exhibit"
        android:textSize="30dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/exhibitCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="@color/block"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">


        <LinearLayout
            android:id="@+id/exhibitLinearView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/manuallySynchronizeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manually Synchronize" />

            <TextView
                android:id="@+id/currentAppUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="User email"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/currentAppUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="User name"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/currentAppUserAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="User age"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/currentAppUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="User address"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/currentAppUserGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="User gender"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/currentAppUserHistories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="User histories"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/clearHistoriesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Search History" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <ProgressBar
        android:id="@+id/synchroniseProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:visibility="gone" />

</LinearLayout>